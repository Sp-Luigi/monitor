{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["*"]
    },
    "allowJs": true,
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true, // 与 allowjs冲突
    "outDir": "./lib",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // "allowUnreachableCode": true,
    "lib": ["es5", "es6", "es2015", "es2016", "es2017", "es2018", "esnext","DOM"],
    "typeRoots": ["./@types/"]
  },
  "include": ["./src/**/*","./src/core/*","./src/core/plugin/*", "./@types/index.d.ts"],
  "exclude": ["./node_modules", "./node_modules/@types/"]
}
